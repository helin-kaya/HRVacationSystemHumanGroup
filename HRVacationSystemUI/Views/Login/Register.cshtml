﻿@model HRVacationSystemUI.Models.RegisterViewModel
@{

    //Layout = "~/Views/Shared/_LayoutElement.cshtml";
    Layout = "~/Views/Shared/_LayoutPurpleBuzz.cshtml";
}
@section hrvacationstyle{
    <style>
      
        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
}

<div class="col-md-6">
    <h1 class="contact_text">KAYIT OLABİLİRSİNİZ...</h1>
    <div class="contact_main">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="mail_section">
            <div class="col-lg-6 mb-4">

                @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control form-control-lg light-300", @id = "floatingname", placeholder = "İsim" })

            </div>
            <div class="col-lg-6 mb-4">
                @Html.TextBoxFor(x => x.Surname, null, new { @class = "form-control form-control-lg light-300", placeholder = "Soyisim" })
            </div>
            <div class="col-lg-6 mb-4">
                @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control form-control-lg light-300", placeholder = "Email" })
            </div>
            <div class="col-lg-6 mb-4">
                @Html.TextBoxFor(x => x.Password, null, new { @class = "form-control form-control-lg light-300", placeholder = "Şifre", @type = "password" })
            </div>
            <div class="col-lg-6 mb-4">

                @Html.TextBoxFor(x => x.ConfirmPassword, null, new { @class = "form-control form-control-lg light-300", placeholder = "Şifre Tekrarı", @type = "password" })
            </div>
            <div class="col-lg-6 mb-4">

                @Html.TextBoxFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control form-control-lg light-300" }) <br />
            </div>

            <div class="col-lg-6 mb-4">
                @Html.DropDownListFor(x => x.GenderPage, (List<SelectListItem>)ViewBag.Genders, new { @class = "form-control custom-select" }) <br />
            </div>

            <div class="col-lg-6 mb-4">
                <div class="col-md-12 col-12 m-auto text-end">
                    <button type="submit" class="btn btn-secondary rounded-pill px-md-5 px-4 py-2 radius-0 text-light light-300">KAYIT OL</button>
                </div>
            </div>
        </div>
        }
    </div>
</div>
